---
import QuestionnaireApp from "../components/QuestionnaireApp.svelte";
import "../styles/global.css";
import { withBasePath } from "../utils/withBasePath";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			rel="icon"
			type="image/svg+xml"
			href={withBasePath("favicon.svg")}
		/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		<meta
			name="description"
			content="A statistical risk assessment tool based on behavioral patterns."
		/>
		<meta http-equiv="X-Content-Type-Options" content="nosniff" />
		<meta http-equiv="X-Frame-Options" content="DENY" />
		<meta http-equiv="Referrer-Policy" content="strict-origin-when-cross-origin" />
		<title>Female Adultery Risk Calculator</title>
	</head>
	<body>
		{/* @ts-expect-error - Astro client directives are not fully typed */}
		<QuestionnaireApp client:idle />
	</body>
</html>
